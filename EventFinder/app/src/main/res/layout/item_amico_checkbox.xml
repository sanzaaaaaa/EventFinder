<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:selectableItemBackground">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfilo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icons8_account_di_prova_100"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/nomeUtente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@id/imgProfilo"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/cognomeUtente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cognome"
        android:textSize="15sp"
        android:layout_toEndOf="@id/imgProfilo"
        android:layout_below="@id/nomeUtente"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp" />


    <CheckBox
        android:id="@+id/checkboxAmico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>

