<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">



    <ImageView
        android:id="@+id/sideBarImageView"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/barraricerca"
        android:layout_below="@+id/loginHomeBtn"
        />


    <ImageButton
        android:id="@+id/btnFiltro"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="337dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/filtro2" />

    <Button
        android:id="@+id/loginHomeBtn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accedi / Registrati"
        android:textColor="@color/white"/>

    <ListView
        android:id="@+id/eventiListView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="100dp"
        />


    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="336dp"
        android:layout_marginTop="15dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:queryHint="Cerca qui gli eventi"
        app:iconifiedByDefault="false"
        android:layout_below="@+id/loginHomeBtn">
    </androidx.appcompat.widget.SearchView>

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        android:layout_marginTop="880dp"
        android:src="@drawable/cc0000" />


</RelativeLayout>