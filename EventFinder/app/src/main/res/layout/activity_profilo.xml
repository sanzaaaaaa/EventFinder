<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Profilo">

    <!-- Barra superiore rossa -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#CC0000"> <!-- Rosso Scuro -->

        <TextView
            android:id="@+id/tvEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Profilo"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Immagine del profilo -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfilo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/icons8_account_di_prova_100"/>

    <!-- Icona fotocamera -->
    <!-- Colorata di rosso -->


    <!-- Layout dettagli profilo -->

    <LinearLayout
        android:id="@+id/listaDettagli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProfilo"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <!-- Nome Cognome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nome"
            android:text="Nome , Cognome"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D32F2F"/>


        <!-- Data di nascita -->
        <TextView
            android:id="@+id/datanascita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="Data di nascita"
            android:textSize="18sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D32F2F"
            android:layout_marginBottom="10dp"/>

        <!-- Email
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D32F2F"
            android:layout_marginBottom="10dp"/>
            -->
    </LinearLayout>

    <!-- Pulsanti -->
    <Button
        android:id="@+id/btnAmici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sezione amici"
        android:textColor="@color/white"
        android:layout_below="@id/listaDettagli"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#CC0000"/>


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:layout_below="@id/btnAmici"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#CC0000" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1000dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-15dp"
        android:background="@android:color/holo_red_dark"
        android:src="@drawable/cc0000" />

    <ImageButton
        android:id="@+id/btnHome4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconahome"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        />

    <ImageButton
        android:id="@+id/btnPrefe4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconapreferiti"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="25dp"
        />

    <ImageButton
        android:id="@+id/btnHomeAmici4"
        android:layout_width="23dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart= "270dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_amici"
        />

    <ImageButton
        android:id="@+id/btnBiglietti4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:src="@drawable/iconabiglietto"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        />

    <ImageButton
        android:id="@+id/btnProfilo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profilo"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="340dp"
        android:layout_marginBottom="20dp"
        />


</RelativeLayout>
