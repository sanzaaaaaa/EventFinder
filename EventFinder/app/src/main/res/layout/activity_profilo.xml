<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profilo">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="unlabeled"/>

    <TextView
        android:id="@+id/scrittaProfilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Il tuo profilo"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfilo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="160dp"
        android:src="@drawable/iconautente"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome , cognome"
        android:layout_marginTop="300sp"
        android:layout_marginLeft="145sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data di nascita"
        android:layout_marginTop="350sp"
        android:layout_marginLeft="147sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:layout_marginTop="400sp"
        android:layout_marginLeft="175sp"
        />

    <Button
        android:id="@+id/btnAmici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sezione amici"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="130dp"
        />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="154dp"
        android:backgroundTint="#DD0C0C"
        />


</RelativeLayout>