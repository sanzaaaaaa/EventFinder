<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:id="@+id/eventiInProgramma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:hint="Eventi in programma"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColorHint="@color/white"
        />

    <Button
        android:id="@+id/eventiPassati"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Eventi passati"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="220dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColorHint="@color/white"
        />

    <ListView
        android:id="@+id/listaInProgramma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black" />

    <ListView
        android:id="@+id/listaPassati"
        android:layout_width="match_parent"
        android:layout_height="611dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"

        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1000dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-15dp"
        android:background="@android:color/holo_red_dark"
        android:src="@drawable/cc0000" />

    <ImageButton
        android:id="@+id/btnHome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconahome"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        />

    <ImageButton
        android:id="@+id/btnPrefe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconapreferiti"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="25dp"
        />

    <ImageButton
        android:id="@+id/btnHomeAmici1"
        android:layout_width="23dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart= "270dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_amici"
        />

    <ImageButton
        android:id="@+id/btnBiglietti1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:src="@drawable/iconabiglietto"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        />

    <ImageButton
        android:id="@+id/btnProfilo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profilo"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="340dp"
        android:layout_marginBottom="20dp"
        />



</RelativeLayout>