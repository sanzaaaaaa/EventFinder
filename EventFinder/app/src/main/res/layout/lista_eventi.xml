<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/eventiImageView"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventiTitolo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Titolo evento"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventiData"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="giorno , ora" />

        <TextView
            android:id="@+id/eventiLuogo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="luogo evento"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/iconaPreferitiHome"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/iconapreferitihome"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>


</LinearLayout>